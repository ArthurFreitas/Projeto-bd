<html lang="en">
	<head>
		<% include ../../partials/head %>
	</head>
	<body>
		<div class="container">
			<header>
				<% include ../../partials/header %>
			</header>

			<form action="editar" method="post" class="form-horizontal">
				
				<div class="form-group">
					<label for="nome" class="control-label col-sm-2"> Nome: </label>
					<div class="col-sm-3">
						<input class="form-control" type="text" name="nome" value="<%= produto.name%>">
					</div>
				</div>
				
				<div class="form-group">
					<label for="preco" class="control-label col-sm-2"> Pre√ßo: </label>
					<div class="col-sm-2">
	  					<input class="form-control" type="number" step="0.01" name="preco" min="0" max="1000" value="<%= produto.price%>">
	  				</div>
	  			</div>
	  			
	  			<div class="form-group">
	  				<label for="estoque" class="control-label col-sm-2"> Quantidade: </label>
	  				<div class="col-sm-2">
						<input class="form-control" type="number" name="estoque" min="0" max="1000"  value="<%= produto.availableQtd%>">
					</div>
				</div>
				
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-3">
						<input type="text" name="id" value="<%= produto._id%>" class="hidden">
						<button type="submit" class="btn btn-success">Editar</button>	
					</div>
				</div>
			</form>
		</div>
	</body>
</html>