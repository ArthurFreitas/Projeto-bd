<html lang="en">
<head>
	<% include ../../partials/head %>
</head>
<body>
	<div class="container">
		<header>
			<% include ../../partials/header %>
		</header>
		<div class="center-container">
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>Nome</th>
						<th>Ação</th>
					</tr>
				</thead>
				<tbody>
					<% if(vendedores.length == 0) {%>
						<tr>
							<td align="center" colspan="2">
								Não há vendedores registrados
							</td>
						</tr>
					<%}else{%>
						<% vendedores.forEach(function(seller){ %>
						<tr>
							<td><%= seller.nome%></td>
							<td><a href=<%= "deletar?id=" + seller._id %> class="btn btn-danger btn-sm">Deletar</a></td>
						</tr>
						<%})%>
					<% }%>
				</tbody>
			</table>
		</div>
	</div>
</body>
</html>